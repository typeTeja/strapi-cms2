{
    "kind": "collectionType",
    "collectionName": "authors",
    "info": {
      "singularName": "author",
      "pluralName": "authors",
      "displayName": "Author"
    },
    "pluginOptions": { "i18n": { "localized": true } },
    "attributes": {
      "name": { "type": "string", "required": true, "pluginOptions": { "i18n": { "localized": true } } },
      "slug": { "type": "uid", "targetField": "name", "unique": true },
      "profile_image": { "type": "media", "multiple": false, "allowedTypes": ["images"] },
      "title": { "type": "string", "pluginOptions": { "i18n": { "localized": true } } },
      "bio": { "type": "richtext", "pluginOptions": { "i18n": { "localized": true } } },
      "social_links": {
        "type": "component",
        "repeatable": true,
        "component": "shared.social-link"
      },
      "posts": {
        "type": "relation",
        "relation": "manyToMany",
        "target": "api::post.post",
        "mappedBy": "authors"
      }
    }
  }